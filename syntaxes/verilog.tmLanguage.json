{
	"scopeName": "source.v",
	"patterns": [
		{
			"include": "#Keywords"
		},
		{
			"include": "#Storage"
		},
		{
			"include": "#Entity"
		},
		{
			"include": "#Variables"
		},
		{
			"include": "#Constants"
		},
		{
			"include": "#Support"
		},
		{
			"include": "#Strings"
		},
		{
			"include": "#Comments"
		}
	],
	"repository": {
		"Keywords": {
			"patterns": [
				{
					"match": "\\b(begin|end|fork|join|always|initial|forever|assign)\\b",
					"name": "keyword.control.verilog"
				},
				{
					"match": "\\b(if|else|case|casex|casez|default|endcase|for|while|repeat|break|continue|return|posedge|negedge|edge|function|endfunction|task|endtask)\\b",
					"name": "keyword.control.conditional.verilog"
				}
			]
		},
		"Storage": {
			"patterns": [
				{
					"match": "\\b(integer|reg|time|wire|real|event|tri|tri0|tri1|wand|wor|supply0|supply1|genvar|automatic)\\b",
					"name": "storage.type.verilog"
				},
				{
					"match": "\\b(input|output|inout|parameter|localparam|specparam)\\b",
					"name": "storage.modifier.verilog"
				}
			]
		},
		"Entity": {
			"patterns": [
				{
					"match": "\\b(module|endmodule|generate|endgenerate)\\b",
					"name": "entity.name.type.verilog"
				}
			]
		},
		"Variables": {
			"patterns": []
		},
		"Constants": {
			"patterns": [
				{
					"match": "\\b((\\d*\\'d\\d+)|(\\d+)|(\\d*\\'[hH][0-9ABCDEFabcdef]+)|(\\d*\\'[bB][01]+)|(\\d*\\'[oO][0-7]+))\\b",
					"name": "constant.numeric.verilog"
				}
			]
		},
		"Support": {
			"patterns": [
				{
					"match": "\\$(display|error|write|monitor|strobe|fopen|fclose|fdisplay|fwrite|fscanf|fmonitor|fstrobe|readmemb|readmemh|random|signed|time|realtime|finish|stop|exit|cast|size|bits|dimensions|left|right|low|high|increment|clog2|ln|log10|exp|sqrt|pow|floor|ceil|hypot|sin|cos|tan|countones|onehot|onehot0|isunknown|testplusargs|valueplusargs|asserton|assertoff|assertkill|asyncandarray|asyncandplane|asyncnandarray|asyncnandplane|asyncorarray|asyncorplane|asyncnorarray|asyncnorplane|fsdbDumpfile|fsdbDumpvars|dumpfile|dumpvars)\\b",
					"name": "support.function.verilog"
				}
			]
		},
		"Strings": {
			"patterns": [
				{
					"match":"(\"[^\"]*\")|('[^']'*)",
					"name": "string.quoted.verilog"
				}
			]
		},
		"Comments": {
			"patterns": [
				{
					"match": "//.*$",
					"name": "comment.line.double-slash.verilog"
				},
				{
					"begin": "/\\*",
					"end": "\\*/",
					"name": "comment.line.double-slash.verilog"
				}
			]
		}
	}
}